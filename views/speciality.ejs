<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Online Ticketing</title>
    <link rel="stylesheet" href="/stylesheets/style12.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
<body>
    <div class="main-container">
    <!-- <h1>Choose Speciality</h1> -->
    <div class="header-grid navigation">
        <img src="/images/logo12.png" alt="Logo" class="logo" />
        <ul>
            <li><a href="/home"><strong>Home</strong></a></li>
            <li><a href="/allocates/choose-speciality">Appointment</a></li>
            <li><a href="/allocates/appointdetails">Appoint Details</a></li>
            <li><a href="#">Report</a></li>
            <li><a href="#">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
      </div>

      <div class="steps-container">
        <div class="steps">
          <h2>Follow these easy steps</h2>

          <div class="diffsteps">
            <p>Select a Department</p>
            <img src="/images/select12.gif" class="decImage" />
          </div>

          <div class="diffsteps">
            <p>Select a Doctor</p>
            <img src="/images/doctor12.png" class="decImage" />
          </div>

          <div class="diffsteps">
            <p>Select a Time Slot</p>
            <img src="/images/time12.png" class="decImage" />
          </div>

          <div class="diffsteps">
            <p>Provide your Personal Information</p>
            <img src="/images/personalinfo12.png" class="decImage" />
          </div>

          <div class="diffsteps">
            <p>Get Appointment confirmation</p>
            <img src="/images/confirm12.png" class="decImage" />
          </div>
        </div>
        <div class="department-container">
            <h1 class="appointmentHeader">Select a Department !!!</h1>
            <div class="items-container">
              <% for (const speciality of specialities) { %>
                <form action="/allocates/choose-doctor" method="POST">
                  <div class="item">
                    <input type="hidden" name="speciality" value="<%= speciality %>" />
                    <button type="submit" class="submit-button1">
                      <%= speciality %>
                    </button>
              
                    <% switch (speciality) { 
                      case 'Cardiology': %>
                      <img src="/images/cardiology.jpeg" alt="Cardiology" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Dermatology': %>
                      <img src="/images/dermatology1.webp" alt="Dermatology" width="65" height="65" class="logo-here">
                    <% break;
            
                    case 'Urology': %>
                      <img src="/images/Urology.png" alt="Urology" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Pediatrics': %>
                      <img src="/images/Pediatrics.png" alt="Pediatrics" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Neurology': %>
                      <img src="/images/Neurology.png" alt="Neurology" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Orthopedics': %>
                      <img src="/images/Orthopedics.png" alt="Orthopedics" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Endocrinology': %>
                      <img src="/images/Endocrinology.png" alt="Endocrinology" width="50" height="50" class="logo-here">
                    <% break;
            
                    case 'Psychiatry': %>
                      <img src="/images/psychiatry.jpeg" alt="Psychiatry" width="60" height="60" class="logo-here">
                    <% break;
                      default: %>
                        <img src="/images/default.jpg" alt="Default Image" width="100" height="100">
                    <% } %>
              
                    <!-- Use a styled button to submit the form -->
                    
                  </div>
                </form>
              <% } %>
              
              
              </div>
          </div>
        </div>
    </div>
</body>
</html>
