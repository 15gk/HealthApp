<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
       
        .custom-lavender-btn {
            background-color: rgb(154, 154, 211);
            color: #333;
            border: 1px solid #adadde; 
        }

        .custom-lavender-btn:hover {
            background-color: #7373c3; 
            border: 1px solid #8a8abf;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container mt-5">
        <h1 class="mb-4"><%= title %></h1>

        <% if (appointList.length > 0) { %>
            <ul class="list-unstyled">
                <% appointList.forEach(appoint => { %>
                    <li class="bg-white p-3 mb-3 rounded shadow">
                       
                        <form action="/allocates/appointstatus" method="GET">
                            <input type="hidden" name="date" value="<%= appoint.date %>">
                            <input type="hidden" name="doctorId" value="<%= appoint.doctorId %>">
                            <button type="submit" class="btn btn-primary mt-3 custom-lavender-btn">Check Status</button>
                        </form>
                       
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No appointments found.</p>
        <% } %>
    </div>

  
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
